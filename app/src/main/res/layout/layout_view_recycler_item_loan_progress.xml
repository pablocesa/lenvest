<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemViewModel"
            type="com.example.lendvest.models.data.Loan" />
    </data>

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{(v)->itemViewModel.onItemViewClickListener.onClick(v, itemViewModel.adapterPosition) }">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_loan_pending_status_indicator"
                android:layout_width="5dp"
                android:layout_height="80dp"
                android:layout_marginEnd="4dp"
                app:cardBackgroundColor="@color/colorAccent">
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_grey"
                app:cardCornerRadius="13dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@{itemViewModel.icon, default=`@drawable/ic_info_outline_black_24dp`}"
                        android:tint="@color/colorPrimaryDark" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{itemViewModel.type, default=`Personal Loan`}"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Amount:"
                            android:theme="@style/ThemeTextView"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Interest:"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@{`€ ` + itemViewModel.amount.toString(), default=`€ 500`}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@{itemViewModel.interestRate.toString() + `%`, default=`2%`}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_bar_loan_pending_amount_pledge"
                    android:layout_width="190dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressTint="@color/colorPrimary"
                    android:progress="@{itemViewModel.percentagePledge, default=`25`}"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:tint="@color/colorAccent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
