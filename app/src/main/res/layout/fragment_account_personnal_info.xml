<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:layout_marginBottom="?android:attr/actionBarSize"
    android:background="@color/colorPrimary"
    tools:context=".fragments.AccountPersonalInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_view_account_first_name">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:id="@+id/text_view_account_pers_info_first_name"
                android:textColor="@color/white"
                android:layout_centerVertical="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_account_text_first_name"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:layout_toRightOf="@+id/text_view_account_pers_info_first_name" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_view_account_last_name">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:id="@+id/text_view_account_pers_info_last_name"
                android:textColor="@color/white"
                android:layout_centerVertical="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_account_last_name"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:layout_toRightOf="@+id/text_view_account_pers_info_last_name" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_view_account_email">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/text_view_account_pers_info_email"
                android:textColor="@color/white"
                android:layout_centerVertical="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_account_email"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:layout_toRightOf="@+id/text_view_account_pers_info_email" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_view_account_dob">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:id="@+id/text_view_account_pers_info_dob"
                android:textColor="@color/white"
                android:layout_centerVertical="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_account_dob"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:layout_toRightOf="@+id/text_view_account_pers_info_dob" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_view_account_pob">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Place of Birth"
                android:id="@+id/text_view_account_pers_info_pob"
                android:textColor="@color/white"
                android:layout_centerVertical="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_account_pob"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:layout_toRightOf="@+id/text_view_account_pers_info_pob" />
        </RelativeLayout>

        <!-- Address -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_view_account_street_name">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Street Name"
                android:id="@+id/text_view_account_pers_info_street_name"
                android:textColor="@color/white"
                android:layout_centerVertical="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_account_street_name"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:layout_toEndOf="@+id/text_view_account_pers_info_street_name" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_view_account_street_number">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Street Number"
                android:id="@+id/text_view_account_pers_info_street_number"
                android:textColor="@color/white"
                android:layout_centerVertical="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_account_street_number"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:layout_toEndOf="@+id/text_view_account_pers_info_street_number" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_view_account_post_code">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Post Code"
                android:id="@+id/text_view_account_pers_info_post_code"
                android:textColor="@color/white"
                android:layout_centerVertical="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_account_post_code"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:layout_toEndOf="@+id/text_view_account_pers_info_post_code" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_view_account_country">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Country"
                android:id="@+id/text_view_account_pers_info_country"
                android:textColor="@color/white"
                android:layout_centerVertical="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_account_country"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:layout_toEndOf="@+id/text_view_account_pers_info_country" />
        </RelativeLayout>

        <!-- Others -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Information"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_view_account_other_info">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Occupation"
                android:id="@+id/text_view_account_pers_info_occupation"
                android:textColor="@color/white"
                android:layout_centerVertical="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_account_occupation"
                android:backgroundTint="@color/white"
                android:layout_toEndOf="@+id/text_view_account_pers_info_occupation" />
        </RelativeLayout>


        <Button
            android:id="@+id/button_analytics_expenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Save"
            android:drawableEnd="@android:drawable/ic_menu_search"
            android:textSize="24sp"/>
    </LinearLayout>
</ScrollView>
