<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:layout_marginBottom="?android:attr/actionBarSize"
    android:background="@color/scrollViewColor"
    tools:context=".fragments.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:padding="16dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <com.example.lendvest.utils.CircleImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/kreevs"
                app:border_color="@color/colorAccent"
                android:layout_gravity="center" />



            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Wick"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eindhoven, Netherlands"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_view_account_pers_info">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:id="@+id/text_view_account_email"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="johnwick@gmail.com"
                    android:id="@+id/text_view_account_email_value"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_view_account_email" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_view_account_dob">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth:"
                    android:id="@+id/text_view_dob"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-01-1970"
                    android:id="@+id/text_view_account_dob"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_view_dob" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_view_account_pob">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Place of Birth:"
                    android:id="@+id/text_view_account_pob"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New York"
                    android:id="@+id/text_view_account_pob_value"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_view_account_pob" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_view_account_street_name">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Street Name:"
                    android:id="@+id/text_view_account_street_name"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Septemberplein"
                    android:id="@+id/text_view_account_street_name_value"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_view_account_street_name" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_view_account_street_number">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Street Number:"
                    android:id="@+id/text_view_account_street_number"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/text_view_account_street_number_value"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_view_account_street_number" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_view_account_postal_code">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Postal Code:"
                            android:id="@+id/text_view_account_postal_code"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerVertical="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5611 AB"
                            android:id="@+id/text_view_account_postal_code_value"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/text_view_account_postal_code" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:id="@+id/relative_view_account_city">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="City:"
                            android:id="@+id/text_view_account_city"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerVertical="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eindhoven"
                            android:id="@+id/text_view_account_city_value"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/text_view_account_city" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_view_account_country">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Country:"
                    android:id="@+id/text_view_account_country"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Netherlands"
                    android:id="@+id/text_view_account_country_value"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_view_account_country" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_view_account_tel">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Tel:"
                    android:id="@+id/text_view_account_tel"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+31 6 9876 5432"
                    android:id="@+id/text_view_account_tel_value"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_view_account_tel" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_view_account_profession">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Profession:"
                    android:id="@+id/text_view_account_profession"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business man"
                    android:id="@+id/text_view_account_profession_value"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_view_account_profession" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_account_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Edit"
            android:drawableEnd="@android:drawable/ic_menu_search"
            android:textSize="24sp"/>

    </LinearLayout>

</ScrollView>
