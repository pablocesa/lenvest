<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemViewModel"
            type="com.example.lendvest.models.data.FileData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="@{(v)->itemViewModel.onItemViewClickListener.onClick(v, itemViewModel.adapterPosition) }">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="1dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="#000000"
                    android:padding="1dp"
                    android:src="@{itemViewModel.drawable, default=`@drawable/account_statement_lg`}"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{itemViewModel.name, default=`ID card/Passport`}"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />




            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>