<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemViewModel"
            type="com.example.lendvest.models.data.Expense" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="@{(v)->itemViewModel.onItemViewClickListener.onClick(v, itemViewModel.adapterPosition) }">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:src="@{itemViewModel.icon, default=`@drawable/account_statement_lg`}"
                    android:tint="@color/colorPrimary" />



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>